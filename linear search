#include <stdio.h>

struct data
{
  int n;
  int ar[100];
  int search;
  int loc;
}d;

int find(int array[],int size,int element)
{  int pos=-1;
    for(int j=0;j<size;j++)
   { 
       if (element==array[j])
       {
        pos=j;
        printf("\nsearched element is found at location %d\n",pos+1);
       }
   }
   return pos+1;
}

int size()
{ int limit;
  printf("\nenter the size of the array\n");
   scanf("%d",&limit);  
   return limit;
}

int element()
{  int find;
   printf("enter the number to be search:\n");
   scanf("%d",&find);
   return find;
}
int main()
{  d.n=size();
   printf("\nentrer the elements of array\n");
   for(int i=0;i<d.n;i++)
    scanf("%d",&d.ar[i]);
   d.search=element();
   d.loc=find(d.ar,d.n,d.search);
   if(d.loc<1) printf("element not found");
   
   return 0;
}
